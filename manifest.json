{
    "manifest_version": 3,
    "name": "LearnShot",
    "version": "1.0",
    "description": "Capture and save screenshots easily for learning and teaching purposes",
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "permissions": [
        "debugger",
        "activeTab",
        "downloads",
        "scripting",
        "commands"
    ],
    "commands": {
        "take-screenshot": {
            "suggested_key": {
                "default": "Ctrl+Shift+S",
                "mac": "Command+Shift+S"
            },
            "description": "Take a screenshot"
        }
    },
    "host_permissions": [
        "<all_urls>"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [{
        "matches": ["<all_urls>"],
        "js": ["content.js"]
    }],
    "action": {
        "default_icon": {
            "16": "icons/icon16.png",
            "32": "icons/icon32.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        },
        "default_title": "LearnShot - Capture Screenshot (Ctrl+Shift+S)"
    }
}